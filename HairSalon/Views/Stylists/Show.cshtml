@using HairSalon.Models;

<html>
  <head>
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
  <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
  <link rel='stylesheet' href='~/css/styles.css'>
  </head>
    <body>

    <div class="container">
  	<div class="row">

      <h3>Here are all of the Clients for the stylist:</h3>

      <ol>
          @foreach (Client client in @Model["clients"])
          {
              <li><a href='/stylists/@Model["stylist"].GetId()/clients/@client.GetId()'>@client.GetName()</a></li>
          }
      </ol>
      <form action="/stylists/@Model["stylist"].GetId()/delete" method="post">
        <button class="btn btn-sm" type="submit" name="button">Delete the stylist</button>
      </form>
      <p><a href='/stylists/@Model["stylist"].GetId()/clients/new'>Add a new client</a></p>

      <form action="/clients/deleteAll" method="post">
      <button type="submit" name="button">Clear All Clients</button>
      </form>

      <p><a href='/stylists'>Return to stylist list.</a></p>
      <p><a href='/'>Return to Main page</a></p>

    </div>
    </div>

    </body>

  </html>
