@using HairSalon.Models;

<h1>NL HairSalon</h1>
<hr />
<h2>Specialties:</h2>

@if (Model.Count != 0)
{
  <ul>
    @foreach (var specialty in Model)
    {
      <li><a href='/specialties/@specialty.GetId()'>@specialty.GetDescription()</a></li>
      <button class="btn btn-sm" ><a href='/specialties/@specialty.GetId()/edit'>Edit</a></button>
    }
  </ul>


}

<h4><a href="/specialties/new">Add new specialty</a></h4>
<h4><a href="/">Return home</a></h4>
